{
    "files": [],
    "references": [
        {
            "path": "./tsconfig.node.json"
        },
        {
            "path": "./tsconfig.app.json"
        }
    ],
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "allowImportingTsExtensions": true,
        "moduleResolution": "bundler",
        "emitDeclarationOnly": true,
        "declaration": true,
        "resolveJsonModule": true,
        "baseUrl": "./app/src",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    }
}
