{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run TypeScript file",
            "type": "shell",
            "command": "npx tsx ${file}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "showReuseMessage": false
            },
            "options": {
                "cwd": "${workspaceFolder}/tests"
            }
        },
        {
            "label": "Run Solana Test Validator",
            "type": "shell",
            "command": "solana-test-validator",
            "runOptions": {
                "instanceLimit": 1,
            },
            "isBackground": true,
            "icon": {
                "id": "link",
                "color": "terminal.ansiGreen"
            },
            "presentation": {
                "panel": "dedicated"
            }
        },
        {
            "label": "Run Frontend Dev Server",
            "type": "shell",
            "command": "npm run dev",
            "runOptions": {
                "instanceLimit": 1,
            },
            "options": {
                "cwd": "${workspaceFolder}/app/solana-chat-frontend"
            },
            "icon": {
                "id": "cloud",
                "color": "terminal.ansiCyan"
            },
            "presentation": {
                "panel": "dedicated",
            }
        }
    ]
}
