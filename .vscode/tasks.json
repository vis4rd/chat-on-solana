{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run TypeScript file",
            "type": "shell",
            "command": "npx tsx ${file}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "showReuseMessage": false
            },
            "options": {
                "cwd": "${workspaceFolder}/tests"
            }
        }
    ]
}
